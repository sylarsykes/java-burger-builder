<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings version="2.0" xmlns="http://java.sun.com/xml/ns/persistence/orm"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
        http://java.sun.com/xml/ns/persistence/orm_2_0.xsd ">
	
	<!-- BURGER REPOSITORY -->
	<entity class="org.sylrsykssoft.java.springboot.mealbuilder.api.model.meals.Burger" name="Burger">
	    <named-query name="Burger.findByName">
	        <query>SELECT B FROM Burger B WHERE B.name.name = :name</query>
	    </named-query>
	    
	    <named-query name="Burger.findByType">
	        <query>SELECT B FROM Burger B WHERE B.type = :type</query>
	    </named-query>
	</entity>
    
</entity-mappings>